<h1>Update <%= @stylist.name() %> </h1>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Change the name of the stylist:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update</button>
</form>

<hr>

<form action="/stylists/<%= @stylist.id() %>/delete" method="post">
  <label for="name">Delete the stylist:</label>
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete</button>
</form>
