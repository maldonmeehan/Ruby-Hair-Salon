<h2>Clients</h2>
<h1>The stylist for <%= @client.name() %> is <% stylist.name() %></h1>

<h3>Update Client's Name</h3>
  <form action="/clients/<%= @client.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="new-client-name">Update Name:</label>
    <input id="new-client-name" name="new-client-name" type="text" placeholder="<%= @client.name() %>" required>

<h3>Update Stylist for: <%= @client.name() %></h3>
  <label for="new-stylist">Select a Stylist</label>
    <select id='new-stylist' name='new-stylist' type='text'>
      <% @stylists.each() do |stylist| %>
        <option value="<%= stylist.id()%>"> <%= stylist.name() %></option>
      <% end %>
    </select>
    <button type="submit" class="btn btn-warning">Update</button>
  </form>
<br>
<hr>
