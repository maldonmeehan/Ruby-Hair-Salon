<h2>Stylists</h2>

<% if @stylists.any?() %>
  <ul>
    <% @stylists.each() do |stylist| %>
      <li><a href="/stylists/<%= stylist.id()%>"><%= stylist.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h3>There are no stylists</h3>
<% end %>

<h3>Add a stylist:</h3>
<form action="/stylists" method="post">
  <label for="stylist-name">Enter Name:</label>
  <input id="stylist-name" name="stylist-name" type="text">
  <button type="submit">Add Stylist</button>
</form>
<hr>
