<h2><%= @stylist.name() %> has the following clients:</h2>

<% if @stylist.clients().any?() %>
  <h3>Name</h3>

  <ul>
    <% @stylist.clients().each() do |client| %>
    <li><%= client.name() %></li>
    <% end %>
  </ul>
  <% else %>
  <h3><%= @stylist.name() %>has no clients!</h3>
<% end %>

<h3>Add a Client</h3>
 <form action="/stylists/<%=@stylist.id() %>" method="post">
   <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">
   <label for="client-name">Enter Name:</label>
   <input id="client-name" name="client-name" type="text">
   <button type="submit">Add Client</button>
 </form>

<h4>Update Stylist Name: <%= @stylist.name() %></h4>
  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="new_name">New Name:</label>
    <input id="new_name" name="new_name" type="text" required>
    <button type="submit">Update</button>
  </form>

<h4>Remote A Stylist</h4>
  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit" class="btn btn-danger">Delete Stylist</button>
  </form>
